{
  "name": "node-ts-fp-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for Node.js TypeScript projects based on Effect-ts",
  "author": "Konrad Markus <konker@iki.fi>",
  "scripts": {
    "test": "jest --no-cache -w 4",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "build": "pnpm clean && tsc && gulp copy-static",
    "eslint": "eslint --max-warnings=0 '**/*.{ts,js,json}'",
    "eslint-fix": "npx eslint --fix||true",
    "prettier-check": "npx prettier --check --ignore-path .gitignore --ignore-path .prettierignore '**/*.{css,html,js,ts,json,md,yaml,yml}'",
    "prettier-fix": "pnpm prettier-check --write",
    "prettify": "pnpm eslint-fix && pnpm prettier-fix",
    "lint": "pnpm eslint && pnpm prettier-check",
    "ci": "pnpm typecheck && pnpm test && pnpm lint && pnpm build"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@effect-ts/schema": "^0.17.2"
  },
  "devDependencies": {
    "@effect/core": "^0.0.16",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@typescript-eslint/typescript-estree": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "npx": "^10.2.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0-dev.20230912"
  },
  "staticFiles": ["YOUR_SRC_DIR_COULD_BE_DOT/**/static/**/*"]
}
